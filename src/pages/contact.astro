---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm";
import "../styles/global.css";

const pageTitle = "Contact";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="content">
    <h1 class="title" style="margin-top: 18px;">Contact</h1>
    <p style="margin: 18px 0 66px;">
      Have a question, correction or project for me? Send me a message! Like my work?
      Follow me on social media platforms!
    </p>
    <!-- The page's content -->
    <div>
      <ContactForm />
    </div>
  </div>
</BaseLayout>
