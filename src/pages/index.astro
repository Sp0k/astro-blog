---
import { getCollection } from "astro:content"
import BaseLayout from "../layouts/BaseLayout.astro"
import Button from "../components/Button.astro"
import PostCard from "../components/PostCard.astro"
import "../styles/global.css"

const pageTitle = "Home"
const friends = ["friends", "amis", "amigos", "amici", "freunde", "vrienden", "vÃ¤nner", "venner", "prieteni"]
const randomNum = Math.floor((Math.random() * 10))
const resumeHandler = "console.log('Hello, World!')"

const posts = (await getCollection('posts')).sort(
  (a, b) => Date.parse(b.data.date) - Date.parse(a.data.date)
)
---

<BaseLayout>
  <!-- Hero image and text -->
  <div class="landing content">
    <div class="left">
      <h1 class="title">Welcome, <div class="green">{friends[randomNum]}</div></h1>
      <div class="intro">
        <p>
          Hi, I'm Gab! I am a computer Science Student from Canada, an
          aspiring video game <b class="green">developer</b> and a
          <b class="green">musician</b>
        </p>
      </div>
      <Button title="Resume" buttonWidth={"203px"} buttonHeight={"58px"} fontSize={"32px"} pressHandler={resumeHandler} borderRadius={"15px"} />
    </div>
  </div>

  <hr class="line" >

  <!-- Latest blog posts -->
  <div class="content">
    <h2 class="title">Latest Posts</h2>
    <h3 class="subtitle">Have you read these new articles...<h3>
    <div class="latest">
      <PostCard post={posts[0]} />
      <PostCard post={posts[1]} />
      <PostCard post={posts[2]} />
    </div>
  </div>

  <hr class="line">

  <!-- RSS Button -->
  <div class="content" style="text-align: center;">
    <h4 class="title" style="margin-top: 34px;">Don't miss anything</h4>
    <h5 class="subtitle">Sign up to be notified of my next posts!</h5>
    <Button title="Sign up for updates" buttonWidth={"500px"} buttonHeight={"130px"} fontSize={"40px"} borderRadius={"30px"} />
  </div>

  <div style="margin-top: 131px;"></div>
</BaseLayout>
<style>
  h1 {
    display: flex;
    gap: 20px;
    margin-bottom: 17px;
  }
  h2 {
    text-align: center;
    margin: 34px auto 0;
    width: auto;
  }
  h5 {
    margin-bottom: 101px;
  }
  p {
    max-width: 551px;
    margin-top: 0;
  }
  .landing {
    height: 354px;
    margin: 121px auto 112px;
    align-content: center;
  }
  .intro {
    margin-bottom: 39px;
  }
  .latest {
    display: flex;
    justify-content: space-evenly;
    gap: 27px;
    margin: 49px auto 44px;
    margin-bottom: 44px;
    height: 460px;
  }
</style>
